<h1>List of products</h1>

<div style= "float:right; width: 40%">
<%unless params[:format] == "pdf"%>
	
<span><%= link_to 'Export to Excel', products_path(format: :xlsx)%></span>

<span><%=link_to 'Create PDF document', products_pdf_path(:format => "pdf")%></span>
<%end%>
</div>
<div style="clear: both">&nbsp;</div>
<table>
	<tr>
	<th>Product</th>
	<th>Price<th>
	</tr>
	<%@products.each do |product|%>
	
	<tr>
		<td><%= product.title%></td>
		<td><%= product.price%></td>
	</tr>
	<%end%>
</table>
